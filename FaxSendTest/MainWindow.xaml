<Window x:Class="FaxSendTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaxSendTest"
        mc:Ignorable="d"
        Title="Fax Send Test" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" HorizontalAlignment="Left" Margin="10">
            <Label>传真设备名</Label>
            <TextBox Width="200" Name="deviceName" ></TextBox>

            <Button Content="获取默认传真名" Width="120" Margin="20 0 0 0" Click="GetDefaultFaxName"></Button>
        </DockPanel>

        <DockPanel Grid.Row="1" HorizontalAlignment="Left"  Margin="10">
            <Label>接收传真号</Label>
            <TextBox Width="200" Name="receiveNumber"></TextBox>
        </DockPanel>

        <DockPanel Grid.Row="2"   Margin="10">
            <Label HorizontalAlignment="Left">发送的Pdf文档在程序的根目录下test.pdf</Label>
            <Button HorizontalAlignment="Right" Content="发送传真" Width="120" Click="Button_Click"></Button>
        </DockPanel>

        <DockPanel Grid.Row="3">
            <ListBox x:Name="LogListBox"
         ItemsSource="{Binding LogEntries}"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         VirtualizingStackPanel.IsVirtualizing="True"
         VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Window>